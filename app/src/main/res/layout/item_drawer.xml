<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlueDraw"
        android:gravity="center"
        android:padding="@dimen/d_20">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_info_funny" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorStartBlue" />

    <TableRow
        android:layout_marginTop="@dimen/d_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_marginLeft="@dimen/d_10"
            android:src="@drawable/ic_book"
            android:tint="@color/colorBlueNew"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10"
            android:text="Truyện cười dân gian"
            android:textColor="@color/colorBlueNew"
            android:textSize="@dimen/d_20" />

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorStartWhite" />
    <TableRow
        android:layout_marginTop="@dimen/d_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_marginLeft="@dimen/d_10"
            android:src="@drawable/ic_profile"
            android:tint="@color/colorBlueNew"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10"
            android:text="Tác giả: Dev Lang Thang"
            android:textColor="@color/colorBlueNew"
            android:textSize="@dimen/d_20" />

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorStartWhite" />
    <TableRow
        android:layout_marginTop="@dimen/d_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_marginLeft="@dimen/d_10"
            android:src="@drawable/ic_info"
            android:tint="@color/colorBlueNew"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10"
            android:text="Version: 2.1.2"
            android:textColor="@color/colorBlueNew"
            android:textSize="@dimen/d_20" />

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorStartWhite" />



</LinearLayout>